# ============================================
# DOCKER COMPOSE ENVIRONMENT
# ============================================

# Network
COMPOSE_PROJECT_NAME=civic-platform

# Database
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin123
MONGODB_URI=mongodb://admin:admin123@mongodb:27017

# Redis
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@redis:6379

# Services Configuration
AUTH_SERVICE_PORT=4001
ENGAGEMENT_SERVICE_PORT=4003
AI_SERVICE_PORT=4002
GATEWAY_PORT=4000
NOTIFICATION_SERVICE_PORT=4004
WS_PORT=8080

# JWT (Same across all services in Docker)
JWT_SECRET=docker_jwt_secret_change_for_production

# External Services URLs (Docker internal networking)
AUTH_SERVICE_URL=http://auth-service:4001/graphql
ENGAGEMENT_SERVICE_URL=http://engagement-service:4003/graphql
AI_SERVICE_URL=http://ai-service:4002/graphql
NOTIFICATION_SERVICE_URL=http://notification-service:4004
GATEWAY_URL=http://gateway:4000

# CORS (Docker networking)
CORS_ORIGIN=http://localhost:5173,http://frontend:3000
CORS_CREDENTIALS=true

# File Uploads (Docker volumes)
UPLOADS_FOLDER=/app/uploads
UPLOADS_VOLUME=engagement_uploads

# Health Checks
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3

# Logging (Docker format)
LOG_FORMAT=json
LOG_DRIVER=json-file

# Resource Limits (Docker)
MEMORY_LIMIT=512m
CPU_LIMIT=0.5