# Environment Variables Configuration
# Copy this file to .env and fill in the actual values

# ============================================
# MongoDB Configuration
# ============================================
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=mongodb_password
MONGODB_HOST=mongodb
MONGODB_PORT=27017

# ============================================
# Authentication Service
# ============================================
AUTH_SERVICE_PORT=5001
AUTH_SERVICE_GRAPHQL_PORT=4001
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d

# ============================================
# Engagement Service
# ============================================
ENGAGEMENT_SERVICE_PORT=5002
ENGAGEMENT_SERVICE_GRAPHQL_PORT=4002

# ============================================
# Gamification Service
# ============================================
GAMIFICATION_SERVICE_PORT=5003
GAMIFICATION_SERVICE_GRAPHQL_PORT=4003

# Game Configuration
GAME_BASE_ISSUE_XP=10
GAME_DAILY_XP_LIMIT=500
GAME_LEVEL_CAP=50
GAME_STREAK_EXPIRY_HOURS=48

# ============================================
# AI Service
# ============================================
AI_SERVICE_PORT=5004
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Frontend Configuration
# ============================================
AUTH_FRONTEND_PORT=3001
ANALYTICS_FRONTEND_PORT=3002
ISSUE_FRONTEND_PORT=3003

# ============================================
# Service URLs (Internal Docker Network)
# ============================================
AUTH_SERVICE_URL=http://auth-service:5001
ENGAGEMENT_SERVICE_URL=http://engagement-service:5002
GAMIFICATION_SERVICE_URL=http://gamification-service:5003
AI_SERVICE_URL=http://ai-service:5004

# ============================================
# Service URLs (External / Local Development)
# ============================================
VITE_API_AUTH=http://localhost:5001
VITE_API_ENGAGEMENT=http://localhost:5002
VITE_API_GAMIFICATION=http://localhost:5003
VITE_API_AI=http://localhost:5004

# ============================================
# General Configuration
# ============================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug
