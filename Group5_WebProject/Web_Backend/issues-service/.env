# ============================================
# ISSUES SERVICE CONFIGURATION
# ============================================

# Service Configuration
NODE_ENV=development
ISSUES_PORT=4002
SERVICE_NAME=issues-service

# MongoDB Configuration
ISSUES_MONGO_URI=mongodb://localhost:27017/civicconnect_issues
# Alternative for Docker:
# ISSUES_MONGO_URI=mongodb://mongodb-issues:27017/civicconnect_issues

# JWT Configuration (shared secret with auth service)
JWT_SECRET=your_super_secret_jwt_key_for_civicconnect_project_2024

# External Service URLs
AUTH_SERVICE_URL=http://localhost:4001
AI_SERVICE_URL=http://localhost:4003
API_GATEWAY_URL=http://localhost:4000

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif
UPLOAD_DIR=./uploads

# Cloudinary Configuration (for image storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_UPLOAD_FOLDER=civicconnect/issues

# Geospatial Configuration
DEFAULT_SEARCH_RADIUS_KM=5  # Default radius for nearby issues
MAX_SEARCH_RADIUS_KM=50     # Maximum allowed search radius

# Pagination Defaults
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Notification Settings
PUSH_NOTIFICATION_ENABLED=true
EMAIL_NOTIFICATION_ENABLED=false
SMS_NOTIFICATION_ENABLED=false

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=3600  # 1 hour in seconds

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200  # Higher limit for issues service

# Logging
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=false

# Socket.IO Configuration
SOCKET_IO_PORT=4005
SOCKET_IO_CORS_ORIGIN=http://localhost:3000