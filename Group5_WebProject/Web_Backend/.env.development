# ============================================
# DEVELOPMENT ENVIRONMENT
# ============================================

# Override default values for development
NODE_ENV=development
DEBUG=true

# Database
MONGODB_URI=mongodb://localhost:27017

# Ports
AUTH_PORT=4001
ENGAGEMENT_PORT=4003
AI_PORT=4002
GATEWAY_PORT=4000
NOTIFICATION_PORT=4004
WS_PORT=8080

# Security (Development only - change in production)
JWT_SECRET=development_jwt_secret_change_in_production
SESSION_SECRET=development_session_secret

# CORS (Allow all in development)
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# AI (Mock mode for development)
AI_MOCK_MODE=true
GEMINI_API_KEY=mock_key_for_development

# Email (Mock mode)
EMAIL_MOCK_MODE=true
SMTP_HOST=localhost
SMTP_PORT=1025  # MailHog port

# File Uploads
UPLOADS_DIR=./uploads/dev
MAX_FILE_SIZE=10485760  # 10MB in dev

# Rate Limiting (Higher limits in dev)
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000