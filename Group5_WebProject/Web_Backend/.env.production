# ============================================
# PRODUCTION ENVIRONMENT
# ============================================

# Application
NODE_ENV=production
APP_NAME=Civic Engagement Platform
APP_VERSION=1.0.0
APP_URL=https://civic-platform.example.com

# Database (Use cloud MongoDB in production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/civic_platform?retryWrites=true&w=majority
MONGODB_USER=production_user
MONGODB_PASSWORD=strong_production_password

# Security (Generate strong secrets)
JWT_SECRET=generate_strong_random_string_here_using_openssl_rand_base64_64
JWT_EXPIRES_IN=1h
SESSION_SECRET=another_strong_random_string_here
BCRYPT_ROUNDS=12

# External APIs (Production keys)
GEMINI_API_KEY=production_gemini_api_key_from_google_cloud
GOOGLE_MAPS_API_KEY=production_google_maps_api_key

# Email (Production SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=sendgrid_api_key_here
EMAIL_FROM=support@civicplatform.ca
EMAIL_NAME=Civic Platform Support

# CORS (Production domains only)
CORS_ORIGIN=https://civic-platform.example.com,https://admin.civic-platform.example.com
CORS_CREDENTIALS=true

# Redis (Production cluster)
REDIS_HOST=redis-cluster.example.com
REDIS_PORT=6379
REDIS_PASSWORD=redis_production_password
REDIS_TLS=true

# File Uploads (Cloud storage in production)
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=civic-platform-uploads
CDN_URL=https://cdn.civic-platform.example.com

# Ports (Behind load balancer)
AUTH_PORT=4001
ENGAGEMENT_PORT=4003
AI_PORT=4002
GATEWAY_PORT=4000
NOTIFICATION_PORT=4004
WS_PORT=8080

# Logging (Structured logging in production)
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_FILE=/var/log/civic-platform/app.log

# Monitoring
METRICS_PORT=9090
PROMETHEUS_ENABLED=true
HEALTH_CHECK_PATH=/health

# Rate Limiting (Stricter in production)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Security Headers
CSP_ENABLED=true
HSTS_ENABLED=true
XSS_PROTECTION_ENABLED=true
CONTENT_TYPE_NOSNIFF=true

# SSL/TLS (For HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/civic-platform.crt
SSL_KEY_PATH=/etc/ssl/private/civic-platform.key