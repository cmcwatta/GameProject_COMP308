# ============================================
# AI-POWERED LOCAL ISSUE TRACKER - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env in each service directory and fill in the values
# ============================================

# APPLICATION
NODE_ENV=development
APP_NAME=AI-Powered Issue Tracker
APP_VERSION=1.0.0

# DATABASE
MONGODB_URI=mongodb://localhost:27017/civic-issue-tracker
MONGODB_POOL_SIZE=10

# AUTHENTICATION
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=10

# SERVICE PORTS
AUTH_SERVICE_PORT=4001
ISSUE_SERVICE_PORT=4002
AI_SERVICE_PORT=4003
NOTIFICATION_SERVICE_PORT=4005
GATEWAY_PORT=4000

# GEMINI API
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro

# OAUTH (Optional)
OAUTH_GOOGLE_ID=your-google-oauth-id
OAUTH_GOOGLE_SECRET=your-google-oauth-secret
OAUTH_GITHUB_ID=your-github-oauth-id
OAUTH_GITHUB_SECRET=your-github-oauth-secret

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:3000,http://localhost:4000,https://studio.apollographql.com

# LOGGING
LOG_LEVEL=debug

# FILE UPLOAD
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# EMAIL (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# REDIS (optional, for caching)
REDIS_URL=redis://localhost:6379

# AI SERVICE
LANGRAPH_TIMEOUT=60
AI_CACHE_TTL=3600

# EXTERNAL APIs
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# EMAIL
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=noreply@civicplatform.ca

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# REDIS
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# FILE UPLOADS
MAX_FILE_SIZE=5242880  # 5MB
UPLOADS_DIR=./uploads

# MONITORING
LOG_LEVEL=info
METRICS_PORT=9090

# SERVICES PORTS
AUTH_PORT=4001
ENGAGEMENT_PORT=4003
AI_PORT=4002
GATEWAY_PORT=4000
NOTIFICATION_PORT=4004

# FRONTEND
CLIENT_URL=http://localhost:5173