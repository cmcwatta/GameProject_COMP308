# ============================================
# CIVIC ENGAGEMENT PLATFORM - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env in each service directory and fill in the values
# ============================================

# APPLICATION
NODE_ENV=development
APP_NAME=Civic Engagement Platform
APP_VERSION=1.0.0

# DATABASE
MONGODB_URI=mongodb://localhost:27017
MONGODB_USER=admin
MONGODB_PASSWORD=password

# AUTHENTICATION
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# EXTERNAL APIs
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# EMAIL
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=noreply@civicplatform.ca

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# REDIS
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# FILE UPLOADS
MAX_FILE_SIZE=5242880  # 5MB
UPLOADS_DIR=./uploads

# MONITORING
LOG_LEVEL=info
METRICS_PORT=9090

# SERVICES PORTS
AUTH_PORT=4001
ENGAGEMENT_PORT=4003
AI_PORT=4002
GATEWAY_PORT=4000
NOTIFICATION_PORT=4004

# FRONTEND
CLIENT_URL=http://localhost:5173